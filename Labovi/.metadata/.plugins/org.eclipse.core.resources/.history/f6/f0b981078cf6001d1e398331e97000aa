package rs.ac.bg.etf.kdp.sanja;

import java.util.concurrent.Semaphore;

public class Test {

	public static void main(String[] args) {
		int N = 3;  // broj potrosaca (consumer-a)
		int B = 1;  // velicina bafera
		
		int cnt = 0;  // brojac potrosaca koji su procitali iz bafera
		int buffer = 0;
		
		Semaphore mutex = new Semaphore(1);
		Semaphore empty = new Semaphore(B);
		Semaphore full = new Semaphore(0);
		
		Producer p = new Producer("P1", N, buffer, empty, full);
		
		for (int i = 0; i < N; i++) {
			Consumer c = new Consumer("C" + (i+1), N, cnt, buffer, mutex, empty, full);
		}
	}

}
